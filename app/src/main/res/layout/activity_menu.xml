<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="274dp"
    android:layout_height="977dp"
    android:layout_gravity="right"
    android:layout_weight="1"
    android:background="@color/white"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="143dp"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="MENU"
        android:background="#FF9800"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="843dp"
        android:layout_weight="1"
        android:backgroundTint="#FF9800"
        android:drawableRight="@drawable/ic_baseline_cancel_24"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnmyservices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="124dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/ic_baseline_brush_24"
        android:text="My Services"
        android:textColor="#0B0000"
        app:backgroundTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

    <Button
        android:id="@+id/btnmyskills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="228dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_button"
        android:drawableLeft="@drawable/ic_baseline_work_24"
        android:text="My Skills"
        android:textColor="#0B0000"
        app:backgroundTint="#FF9800"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1" />

</androidx.constraintlayout.widget.ConstraintLayout>